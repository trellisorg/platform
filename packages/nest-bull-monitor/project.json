{
    "name": "nest-bull-monitor",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/nest-bull-monitor/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/libs/nest-bull-monitor",
                "tsConfig": "libs/nest-bull-monitor/tsconfig.lib.json",
                "packageJson": "libs/nest-bull-monitor/package.json",
                "main": "libs/nest-bull-monitor/src/index.ts",
                "assets": ["libs/nest-bull-monitor/*.md"]
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs nest-bull-monitor {args.ver} {args.tag}",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"]
        }
    },
    "tags": []
}
