{
    "name": "advisory-lock",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/advisory-lock/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:swc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/advisory-lock",
                "tsConfig": "packages/advisory-lock/tsconfig.lib.json",
                "packageJson": "packages/advisory-lock/package.json",
                "main": "packages/advisory-lock/src/index.ts",
                "assets": ["packages/advisory-lock/*.md"]
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs advisory-lock {args.ver} {args.tag}",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"]
        }
    },
    "tags": []
}
