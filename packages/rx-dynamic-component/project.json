{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "packages/rx-dynamic-component/src",
    "prefix": "trellisorg",
    "targets": {
        "build": {
            "executor": "@nrwl/angular:package",
            "options": {
                "tsConfig": "packages/rx-dynamic-component/tsconfig.lib.json",
                "project": "packages/rx-dynamic-component/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "packages/rx-dynamic-component/tsconfig.lib.prod.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": [
                    "packages/rx-dynamic-component/src/**/*.ts",
                    "packages/rx-dynamic-component/src/**/*.html",
                    "packages/rx-dynamic-component/browser/**/*.ts",
                    "packages/rx-dynamic-component/browser/**/*.html",
                    "packages/rx-dynamic-component/server/**/*.ts",
                    "packages/rx-dynamic-component/server/**/*.html",
                    "packages/rx-dynamic-component/template/**/*.ts",
                    "packages/rx-dynamic-component/template/**/*.html"
                ]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/rx-dynamic-component"],
            "options": {
                "jestConfig": "packages/rx-dynamic-component/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
