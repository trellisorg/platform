{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "importsNotUsedAsValues": "error",
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types", "dist/"],
        "lib": ["es2017", "dom", "esnext"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@trellis/make-buildable": ["packages/make-buildable/src/index.ts"],
            "@trellisorg/nest-spectator": [
                "packages/nest-spectator/src/index.ts"
            ],
            "@trellisorg/ngrx-data-websocket-client": [
                "packages/ngrx-data-websocket/client/src/index.ts"
            ],
            "@trellisorg/ngrx-data-websocket-core": [
                "packages/ngrx-data-websocket/core/src/index.ts"
            ],
            "@trellisorg/ngrx-data-websocket-server": [
                "packages/ngrx-data-websocket/server/src/index.ts"
            ],
            "@trellisorg/ngrx-universal-rehydrate/browser": [
                "packages/ngrx-universal-rehydrate/browser/src/index.ts"
            ],
            "@trellisorg/ngrx-universal-rehydrate/server": [
                "packages/ngrx-universal-rehydrate/server/src/index.ts"
            ],
            "@trellisorg/nxls": ["packages/nxls/src/index.ts"],
            "@trellisorg/rx-dynamic-component": [
                "packages/rx-dynamic-component/src/index.ts"
            ]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
